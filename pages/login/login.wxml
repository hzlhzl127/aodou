<!--pages/login/login.wxml-->
<!--顶部logo-->
<view class="top">
		<image class="logo" src="../../picture/用户.png"/>
</view>
<!--输入区域-->
<view class='item'>
	<text>账号:</text>
	<input placeholder="请输入您的账号" bindinput="getAccount"/>
</view>
<view class='item'>
	<text>密码:</text>
	<input type="password" placeholder="请输入您的密码" bindinput="getPs"/>
</view>

<button class="btn" bindtap="login">登 录</button>

<view class="sign" bindtap="register">暂无账号?点击注册</view>
