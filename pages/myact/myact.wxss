/* pages/myact/myact.wxss */

page {
	background: linear-gradient(to bottom, #284155,white,white, white);
	opacity: 0.98;
	background-color: white;
	background-repeat: no-repeat;
}

.top{
	font-size: x-large;
	margin: 150rpx 30rpx;
	margin-bottom: 40rpx;
	font-weight: lighter;
	color: white;
	background-color: #70a2ac;
	width: 440rpx;
	border-radius: 50rpx;
}

.indeximg {
	margin-top: 30rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20%;
  object-fit: cover;
  margin-left: 10px; /* 添加左边距以与内容框分隔开 */
}

.activity-item {
  display: flex; /* 使用 Flexbox 布局 */
  align-items: center; /* 在主轴上垂直居中 */
  justify-content: space-between; /* 在主轴上两端对齐，图片和内容框之间的空间平分 */
  border: 1rpx solid white;
  border-radius: 10rpx;
  padding: 30rpx;
  padding-top: 20rpx;
  padding-bottom: 60rpx;
  margin-bottom: 30rpx;
	width: 670rpx;
	height: 250rpx;
	background-color: white;
	z-index: 2;
	box-shadow: 1rpx 1rpx 8rpx rgba(0, 0,0 ,0.5);
	border-radius: 25rpx;
}

.activity-name {
	color: black;
	float: top;
  font-size: 40rpx;
  font-weight: bold;

}

.activity-info {
  font-size: 20rpx;
  color: #666;
}

.activity-info view {
  margin-bottom: 5rpx;
}

.btn{
	height: 80rpx;
	width: 500rpx;
	margin: 10rpx 120rpx;
	background-color: orangered;
	color: white;
	font-weight: bold;
	margin-bottom: 110rpx;
	z-index: 5;
}
.item{
	height: 500rpx;
	width: auto;
	background-color: aqua;
}


.img{
	position: absolute;
	width: 350rpx;
	height: 350rpx;
}

.container{
	background-color:white;
	border-radius: 50rpx;
	height: 100%;
}